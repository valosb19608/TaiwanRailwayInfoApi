<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.railway.info.model.News" table="news" schema="taiwan_railway_api_info">
        <id name="newsId" column="news_id"/>
        <property name="language" column="language"/>
        <property name="title" column="title"/>
        <property name="newsCategory" column="news_category"/>
        <property name="description" column="description"/>
        <property name="newsUrl" column="news_url"/>
        <property name="attachmentUrl" column="attachment_url"/>
        <property name="startTime" column="start_time"/>
        <property name="endTime" column="end_time"/>
        <property name="publishTime" column="publish_time"/>
        <property name="updateTime" column="update_time"/>
    </class>
</hibernate-mapping>